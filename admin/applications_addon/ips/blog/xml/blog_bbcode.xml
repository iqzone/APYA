    <bbcode>
      <bbcode_id>35</bbcode_id>
      <bbcode_title>Extract Blog Entry</bbcode_title>
      <bbcode_desc>This will allow users to define an extract for an entry. Only this piece of the entry will be displayed on the main blog page and will show up in the RSS feed.</bbcode_desc>
      <bbcode_tag>extract</bbcode_tag>
      <bbcode_replace><![CDATA[<!--blog.extract.start-->{content}<!--blog.extract.end-->]]></bbcode_replace>
      <bbcode_useoption>0</bbcode_useoption>
      <bbcode_example><![CDATA[[extract]This is an example![/extract]]]></bbcode_example>
      <bbcode_switch_option>0</bbcode_switch_option>
      <bbcode_menu_option_text/>
      <bbcode_menu_content_text>Blog entry extract</bbcode_menu_content_text>
      <bbcode_single_tag>0</bbcode_single_tag>
